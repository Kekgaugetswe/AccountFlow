@model List<AccountFlow.Web.Domain.Usermanagement.Models.UserViewModel>

<div class="container mt-4">
    <h2>User Management</h2>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @string.Join(", ", user.Roles)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="AssignToUser"  asp-route-id="@user.Id" class="btn btn-sm btn-secondary">Assign Roles</a>
                        <!-- Optionally add delete/deactivate -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>