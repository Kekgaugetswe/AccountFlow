@using AccountFlow.Web.Domain.Usermanagement.Models
@model AssignRolesViewModel

<div class="container mt-5">
    <h2>Assign Roles to Users</h2>


    <h2>Assign Roles</h2>
    <form asp-action="UpdateRoles" method="post">
        <table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="UpdateRoles" method="post">
                        <input type="hidden" name="userId" value="@user.Id" />
                        @foreach (var role in Model.AvailableRoles)
                        {
                            <label>
                                <input type="checkbox" name="selectedRoles" value="@role"
                                       @(user.Roles.Contains(role) ? "checked" : "") />
                                @role
                            </label>
                        }
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
    </form>

</div>
