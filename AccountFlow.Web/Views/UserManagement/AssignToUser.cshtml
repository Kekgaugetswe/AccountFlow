@model AccountFlow.Web.Domain.Usermanagement.Models.AssignRolesToUserViewModel

<div class="container mt-4">
    <h3>Assign Roles to @Model.UserName</h3>

    <form asp-action="AssignToUser" method="post">
        <input type="hidden" asp-for="UserId" />
        <div class="mb-3">
            @foreach (var role in Model.AvailableRoles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           name="SelectedRoles" value="@role"
                           @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary">Save Roles</button>
        <a asp-action="AssignRoles" class="btn btn-secondary">Back</a>
    </form>
</div>