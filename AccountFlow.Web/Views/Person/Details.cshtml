@model Person

<h1>Person Details</h1>

<table class="table">
    <tr>
        <th>Code:</th>
        <td>@Model.Code</td>
    </tr>
    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Surname:</th>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <th>ID Number:</th>
        <td>@Model.IdNumber</td>
    </tr>
</table>

<h3>Accounts:</h3>
<button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#addOrEditAccountModal">
    Add Account
</button>

@if (Model.Accounts != null && Model.Accounts.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Account Number</th>
                <th>Outstanding Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.Accounts)
            {
                <tr>
                    <td>@account.AccountNumber</td>
                    <td>@account.OutstandingBalance.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                    <td>
                        <a asp-controller="Account" asp-action="Details" asp-route-id="@account.Code" class="btn btn-info btn-sm">View Details</a>

                        <!-- Edit Button -->
                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editAccountModal-@account.Code">
                            Edit
                        </button>

                        <!-- Delete/Close Button -->
                        <form asp-controller="Account" asp-action="Delete" asp-route-id="@account.Code" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to close this account?');">
                                Close
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No accounts available.</p>
}

<partial name="_AddOrEditAccountModal" model="new Account{PersonCode = Model.Code}"/>