<!-- Reverse Confirmation Modal -->
<div class="modal fade" id="confirmReverseModal" tabindex="-1" aria-labelledby="confirmReverseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Reverse</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to reverse this transaction?
            </div>
            <div class="modal-footer">
                <form id="reverseForm" asp-controller="Transaction" asp-action="Reverse" method="post">
                    <!-- Make sure the name is "id" so the controller can receive it -->
                    <input type="hidden" id="hiddenTransactionId" name="id" value="">

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Reverse</button>
                </form>
            </div>
        </div>
    </div>
</div>
