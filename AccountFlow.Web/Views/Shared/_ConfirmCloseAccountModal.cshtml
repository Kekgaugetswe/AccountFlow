<!-- Close Account Confirmation Modal -->
<div class="modal fade" id="confirmCloseAccountModal" tabindex="-1" aria-labelledby="confirmCloseAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Account Closure</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to close this account? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <form id="closeAccountForm" method="post">
                    <input type="hidden" id="closeAccountId" name="id" value="">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Close Account</button>
                </form>
            </div>
        </div>
    </div>
</div>
